      anchors.left: lootText.left

    Button
      id: clear
      !text: tr('Clear items')
      width: 120
      @onClick: modules.game_poxbot.clearItems()
      anchors.top: buttonOk2.bottom
      anchors.left: lootitems.left
      margin-top: 5

