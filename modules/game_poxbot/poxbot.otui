      !tooltip: tr('Automatically attack monsters.')
      !text: tr('Enable Attacking')
      focusable: true
      anchors.top: parent.top
      anchors.left: parent.left

    TextList
      id: targets
      height: 80
      width: 180
      anchors.top: autoAttack.bottom
      anchors.left: parent.left
      focusable: false
      vertical-scrollbar: reasonListScrollBar2

    VerticalScrollBar
      id: reasonListScrollBar2
      anchors.top: targets.top
      anchors.bottom: targets.bottom
      anchors.right: targets.right
      step: 14
      pixels-scroll: true

    TextEdit
      id: TargetText
      width: 30
      !text: tr('Rat')
      anchors.top: targets.bottom
      anchors.left: targets.left
      anchors.right: targets.right

    Button
      id: buttonOk2
      !text: tr('Add target')
      width: 120
      @onClick: modules.game_poxbot.addTarget()
      anchors.top: TargetText.bottom
      anchors.left: TargetText.left

    Button
      id: clear
      !text: tr('Clear targets')
      width: 120
      @onClick: modules.game_poxbot.clearTargets()
      anchors.top: buttonOk2.bottom
      anchors.left: targets.left
      margin-top: 5

    NormalBotBox
      id: AtkSpell
      !text: tr('Attack spell/rune')
      !tooltip: tr('Automatically cast the spell or rune below when you are attacking.')
      anchors.top: parent.top
      anchors.left: targets.right
      width: 180
      focusable: true
      margin-left: 20

    Label
      id: AtkSpl
      !text: tr('Single Target Spell/Rune')
      anchors.top: prev.bottom
      anchors.left: targets.right
      width: 180
      focusable: true
      margin-left: 20

    TextEdit
      id: AtkSpellText
      width: 120
      !text: tr('')
      anchors.top: prev.bottom
      anchors.left: targets.right
      margin-top: 2
      margin-left: 20

    Label
      id: AtkRune
      !text: tr('AoE Rune')
      anchors.top: prev.bottom
      anchors.left: targets.right
      width: 180
      focusable: true
      margin-left: 20

    TextEdit
      id: AtkRuneName
      width: 120
      !text: tr('')
      anchors.top: prev.bottom
      anchors.left: targets.right
      margin-left: 20

    Label
      id: AtkRune
      !text: tr('AoE Amount')
      anchors.top: prev.bottom
      anchors.left: targets.right
      width: 180
      focusable: true
      margin-left: 20

    TextEdit
      id: AtkRuneAmount
      width: 50
      !text: tr('2')
      anchors.top: prev.bottom
      anchors.left: targets.right
      margin-left: 20

    HorizontalSeparator
      anchors.left: parent.left
      anchors.right: parent.right
      anchors.top: clear.bottom
      margin-top: 8
      margin-bot: 8

    CheckBox
      id: KeepDistance
      !text: tr('Keep Distance from Target')
      !tooltip: tr('keep 4sqm distance from target.')
      anchors.top: prev.bottom
      anchors.left: parent.left
      width: 180
      focusable: true
    CheckBox
      id: LureTarget
      !text: tr('Lure Target')
      !tooltip: tr('Lure target to latest lure waypoint.')
      anchors.top: prev.bottom
      anchors.left: parent.left
      width: 180
      focusable: true

  FlatPanel
    id: looting
    width: 200
    visible: false
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.top: buttons.bottom
    anchors.bottom: parent.bottom

    BotBox
      id: autoLoot
      !tooltip: tr('Automatically loot.')
      !text: tr('Enable Looting')
