TextEdit < UITextEdit
  font: verdana-11px-antialised
  color: orange
  size: 194 46
  text-offset: 0 4
  text-align: topCenter
  opacity: 1
  padding-top: 17
  padding-left: 20
  image-source: /images/ui/textedit
  image-border: 1
  selection-color: #272727
  selection-background-color: #cccccc
  $disabled:
    color: #27272788
    opacity: 0.5

PasswordTextEdit < TextEdit
  text-hidden: true

MultilineTextEdit < TextEdit
  multiline: true
