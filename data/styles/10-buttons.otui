Button < UIButton
  font: verdana-11px-antialised
  color: #dfdfdfff
  size: 75 30
  text-offset: 0 0
  image-source: /images/ui/button
  image-color: #dfdfdf
  image-clip: 0 0 75 30
  padding: 5 10 5 10
  opacity: 1.0

  $hover !disabled:
    image-clip: 0 30 75 30

  $pressed:
    image-clip: 0 61 75 30
    text-offset: 1 1

  $disabled:
    color: #dfdfdf88
    opacity: 0.8

