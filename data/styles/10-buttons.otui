TabButton < UIButton
  size: 26 24
  image-source: /images/ui/sound_control_button
  image-color: #dfdfdf
  image-clip: 0 0 26 24
  image-border: 3
  icon-color: #dfdfdf
  color: #dfdfdf

  $hover !on:
    image-clip: 0 24 26 24
    color: #dfdfdf

  $disabled:
    image-color: #dfdfdf66
    icon-color: #dfdfdf

  $on:
    image-clip: 0 48 26 24
    color: #dfdfdf

